{
  "index_templates": [
    {
      "name": "global-ds-ilm",
      "index_template": {
        "index_patterns": ["*"], 
        "template": {
          "settings": {
            "index": {
              "lifecycle": {
                "name": "2-week-retention"
              },
              "number_of_replicas": "0",
              "lifecycle.rollover_alias": "global-ds-alias",
              "lifecycle.max_primary_shard_size": "50gb",
              "lifecycle.max_age": "1d"
            }
          }
        },
        "composed_of": [],
        "priority": 1,
        "data_stream": {
          "hidden": false,
          "allow_custom_routing": false
        },
        "metadata": {
          "description": "Global ILM template for non-system data streams"
        }
      }
    }
  ]
}
